<% include partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Education for <%= user.firstname %></h1>
        <div style="width: 30%; margin: 30px auto;" >
            
            <form action="/members/<%=user._id%>/education" method="POST">
                <div class="form-group">
                    <input type="text" name="education[course]" placeholder="course">
                </div>
                <div class="form-group">
                    <input type="text" name="education[university]" placeholder="university">
                </div>
                <div class="form-group">
                    <input type="text" name="education[yearofjoin]" placeholder="joining year">
                </div>
                <div class="form-group">
                    <input type="text" name="education[passyear]" placeholder="passing year">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            
        </div>
    </div>
</div>



<% include partials/footer %>